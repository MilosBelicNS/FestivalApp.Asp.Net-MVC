@model FestivalTicketsMVC5.Models.Festival
<tr>
    <td style="font-size: 16px">
        @Html.DisplayFor(m => m.Name)
    </td>
    <td style="font-size: 16px">
        @Html.DisplayFor(m => m.Place)
    </td>
    <td style="font-size: 16px">
        @Html.DisplayFor(m => m.DateF)
    </td>
    <td style="font-size: 16px">
        @Html.DisplayFor(m => m.Rate)
    </td>
    <td style="font-size: 16px">
        @Html.DisplayFor(m => m.EventCapacity)
    </td>

    <td>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning btn-sm" }) |
        @Html.ActionLink("Details", "Details", new { id = Model.Id }, new { @class = "btn btn-info btn-sm" }) |
        @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger btn-sm" })
    </td>
</tr>

